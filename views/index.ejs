<%- include ('partials/head.ejs') %>
<%- include ('partials/header.ejs') %>
<body>
    <div class="container mt-4">
        <h1 class="mb-4 text-center">Perguntas Recentes</h1>
    
        <% perguntas.forEach(function(pergunta) { %>
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><%= pergunta.titulo %></h5>
                    <p class="card-text"><%= pergunta.descricao %></p>
                    <a href="/pergunta/respostas/<%= pergunta.id %>" class="btn btn-dark">Responder</a>
                    <a href="/pergunta/respostas/<%= pergunta.id %>" class="btn btn-dark">Ver respostas</a>
                </div>
            </div>
        <% }); %>
    </div>
</body>
